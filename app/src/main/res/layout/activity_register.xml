<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_icon"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="23sp"
            android:typeface="monospace" />

    <RelativeLayout
        android:id="@+id/rl_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="2dp">


        <ImageView
            android:id="@+id/iv_userIconName"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_account"/>


        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_userIconName"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="19"
            android:hint=" 用户名"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/iv_userNameClear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@mipmap/ic_close"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userName"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_userIconEmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_email"/>


        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_userIconEmail"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="19"
            android:hint="  邮箱"
            android:inputType="textEmailAddress"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_emailClear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@mipmap/ic_close"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userEmail"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/iv_userIconPwd"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:src="@mipmap/ic_password"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_userIconPwd"
            android:background="@null"
            android:drawablePadding="5dp"
            android:ems="19"
            android:hint=" 密码"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType= "textPassword"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_pwClear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_close"/>

        <ImageView
            android:id="@+id/iv_pwVis"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@mipmap/ic_notvisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userPassword"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/iv_userIconPwd1"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:src="@mipmap/ic_password"/>

        <EditText
            android:id="@+id/et_password1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_userIconPwd1"
            android:background="@null"
            android:drawablePadding="5dp"
            android:ems="19"
            android:hint=" 重复密码"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType= "textPassword"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_pwClear1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_close"/>

        <ImageView
            android:id="@+id/iv_pwVis1"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@mipmap/ic_notvisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userSex"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/rl_userPassword1"
        android:layout_marginTop="1dp"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/iv_userSex"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:src="@mipmap/ic_sex"/>

        <ImageButton
            android:id="@+id/ib_male"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_male"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/ib_female"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="250dp"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_female" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userIphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userSex"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_userIconPhone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_phone"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userIconPhone"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="19"
            android:hint="  手机"
            android:inputType="phone"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_phoneClear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@mipmap/ic_close"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userIphone"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_userIconAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_address"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userIconAdd"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:ems="19"
            android:hint="  地址"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_addClear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@mipmap/ic_close"/>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/buttonConfirm"
        android:gravity="center"
        android:padding="10dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView android:id="@+id/tv_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_register"
        android:text="已有账户，点击登录"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_author"
        android:layout_below="@id/tv_login"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_connect"
        android:layout_below="@id/tv_author"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/connect"
        android:textSize="12sp" />

    </RelativeLayout>
</ScrollView>