<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="35dp"
            android:textSize="@dimen/topic_item_title" />

        <TextView
            android:id="@+id/tv_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/tv_item_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="35dp"
            android:textSize="@dimen/topic_item_small"
            android:textColor="@color/grey_900"/>


        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="@dimen/topic_item_icon"
            android:layout_height="@dimen/topic_item_icon"
            android:layout_marginTop="@dimen/topic_margin"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/tv_item_time"
            android:background="@mipmap/ic_time"
            android:scaleType="centerInside"
            android:layout_below="@+id/tv_item_content"
            />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/topic_margin"
            android:layout_marginRight="35dp"
            android:layout_below="@+id/tv_item_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/topic_item_small" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_400"
            android:layout_below="@id/tv_item_time"/>

    </RelativeLayout>
</LinearLayout>