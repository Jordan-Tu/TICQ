<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:circleimageview="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_author"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            app:civ_border_color="@color/buttonConfirm"
            app:civ_border_width="1dp"
            android:src="@drawable/background" />

        <TextView
            android:id="@+id/tv_photo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="张"
            android:textSize="28dp"
            android:textColor="@color/buttonConfirm"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_author"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="张三"
            android:textColor="@color/buttonConfirm"
            android:textSize="@dimen/user_name"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_author"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="你好，很高兴认识你！"
            android:textSize="@dimen/topic_item_small" />

        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/buttonConfirm"
            android:layout_below="@id/tv_message"/>


    </RelativeLayout>

</LinearLayout>
